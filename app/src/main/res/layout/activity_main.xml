<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center"
                android:textColor="#808080"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="0"
                android:textColor="#FF000000"
                android:id="@+id/team_a_score"
                android:gravity="center"
                android:textSize="60sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="+3points"
                android:padding="16dp"
                android:onClick="addThreeForA"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2points"
                android:textColor="#FF000000"
                android:padding="16dp"
                android:onClick="addTwoForA"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="FREE THROW"
                android:padding="16dp"
                android:onClick="addFreeThrowA"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/team_b_score"
            android:padding="16dp"
            android:textColor="#FF000000"
            android:gravity="center"
            android:textSize="60sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3points"
            android:padding="16dp"
            android:textColor="#FF000000"
            android:onClick="addThreeForB"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2points"
            android:onClick="addTwoForB"
            android:textColor="#FF000000"
            android:padding="16dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FREE THROW"
            android:textColor="#FF000000"
            android:padding="16dp"
            android:onClick="addFreeThrowB"
            />
    </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="resetScore"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:textColor="#FF000000"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"

        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>